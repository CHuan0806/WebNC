@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/6.0.0/signalr.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        (function () {
            'use strict';

            console.log('üöÄ MultiChat Module Starting...');
            console.log('Current User ID:', '@currentUserId');
            console.log('Current User Role: Admin');

            // =================================
            // LOCAL VARIABLES
            // =================================
            let multiChatConnection;
            let activeWindows = new Map();
            let currentUser = '@currentUserId';
            let draggedWindow = null;
            let dragOffset = { x: 0, y: 0 };
            let isConnected = false;

            // =================================
            // INITIALIZATION
            // =================================
            function init() {
                console.log('üîÑ Initializing MultiChat...');

                // FORCE disable and cleanup any existing ChatWidget
                const chatToggle = document.getElementById('chatToggle');
                const chatWidget = document.getElementById('chatWidget');
                if (chatToggle) {
                    chatToggle.remove();
                    console.log('üôà ChatWidget toggle removed');
                }
                if (chatWidget) {
                    chatWidget.remove();
                    console.log('üôà ChatWidget removed');
                }

                if (window.chatConnection) {
                    console.log('üßπ Cleaning up existing chat widget connection');
                    window.chatConnection.stop();
                    window.chatConnection = null;
                }

                updateConnectionStatus('ƒêang k·∫øt n·ªëi...', false);
                initializeSignalR();
                setupEventListeners();
                updateStatistics();
            }

            function initializeSignalR() {
                console.log('üîÑ Initializing SignalR for MultiChat...');

                multiChatConnection = new signalR.HubConnectionBuilder()
                    .withUrl("/chathub")
                    .configureLogging(signalR.LogLevel.Information)
                    .withAutomaticReconnect()
                    .build();

                // Assign to global scope for ChatWidget to detect
                window.multiChatConnection = multiChatConnection;

                multiChatConnection.onreconnecting(() => updateConnectionStatus('ƒêang k·∫øt n·ªëi l·∫°i...', false));
                multiChatConnection.onreconnected(() => {
                    updateConnectionStatus('ƒê√£ k·∫øt n·ªëi', true);
                    isConnected = true;
                });
                multiChatConnection.onclose(() => {
                    updateConnectionStatus('M·∫•t k·∫øt n·ªëi', false);
                    isConnected = false;
                });

                multiChatConnection.on("ReceiveMessage", (senderName, message, role, senderId) => {
                    console.log('üì® MultiChat received message:', { senderName, message, role, senderId });
                    handleIncomingMessage(senderName, message, role, parseInt(senderId));
                });

                multiChatConnection.on("NewMessageNotification", (senderId, senderName) => {
                    showToast(`Tin nh·∫Øn m·ªõi t·ª´ ${senderName}`, 'info');
                    // You might want to highlight the user card here
                });

                multiChatConnection.start()
                    .then(() => {
                        console.log('‚úÖ MultiChat SignalR connected successfully');
                        updateConnectionStatus('ƒê√£ k·∫øt n·ªëi', true);
                        isConnected = true;
                    })
                    .catch(err => {
                        console.error('‚ùå MultiChat SignalR connection failed:', err);
                        updateConnectionStatus('K·∫øt n·ªëi th·∫•t b·∫°i', false);
                        showToast('Kh√¥ng th·ªÉ k·∫øt n·ªëi ƒë·∫øn server chat', 'error');
                    });
            }

            function updateConnectionStatus(text, connected) {
                const indicator = document.getElementById('connectionIndicator');
                if (indicator) {
                    indicator.innerHTML = `<i class="bi bi-circle-fill"></i> ${text}`;
